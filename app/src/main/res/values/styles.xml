<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="dialogTransparent" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="fresco_loading">
        <item name="progressBarImage">@drawable/common_loading</item>
        <item name="progressBarImageScaleType">centerInside</item>
        <item name="pressedStateOverlayImage">@color/pressBg</item>
        <item name="progressBarAutoRotateInterval">1000</item>
        <item name="placeholderImage">@color/c_f1</item>
        <item name="placeholderImageScaleType">fitCenter</item>
